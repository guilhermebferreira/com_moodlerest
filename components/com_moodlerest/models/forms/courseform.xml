<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="name" type="text" required="true" label="COM_MOODLEREST_FORM_LBL_COURSE_NAME" description="COM_MOODLEREST_FORM_DESC_COURSE_NAME" hint="COM_MOODLEREST_FORM_LBL_COURSE_NAME"/>
    <field name="shortname" type="text" filter="username" required="true" label="COM_MOODLEREST_FORM_LBL_COURSE_SHORTNAME" description="COM_MOODLEREST_FORM_DESC_COURSE_SHORTNAME" hint="COM_MOODLEREST_FORM_LBL_COURSE_SHORTNAME"/>
    <field name="sumarry" type="text" filter="string" required="true" label="COM_MOODLEREST_FORM_LBL_COURSE_SUMARRY" description="COM_MOODLEREST_FORM_DESC_COURSE_SUMARRY" hint="COM_MOODLEREST_FORM_LBL_COURSE_SUMARRY"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
